<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_much_beer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/decrease_Beer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decreaseBeer"
            android:text="-"
            />

        <TextView
            android:id="@+id/quantity_beer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="0ml"
            android:gravity="center"
            />

        <Button
            android:id="@+id/add_Beer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="addBeer"
            android:text="+"
            />

        <EditText
            android:id="@+id/input_beer"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="0ml"/>
    </LinearLayout>
    <TextView
        android:id="@+id/edit_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_much_wine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/decrease_Wine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decreaseWine"
            android:text="-"
            />

        <TextView
            android:id="@+id/quantity_wine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="0ml"
            android:gravity="center"
            />

        <Button
            android:id="@+id/add_Wine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="addWine"
            android:text="+"

            />
        <EditText
            android:id="@+id/input_wine"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="0ml"/>
    </LinearLayout>
    <TextView
        android:id="@+id/edit_message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_much_liquor"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/decrease_Liquor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decreaseLiquor"
        android:text="-"
        />

    <TextView
        android:id="@+id/quantity_liquor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="0ml"
        android:gravity="center"
        />

    <Button
        android:id="@+id/add_Liquor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="addLiquor"
        android:text="+"

        />
        <EditText
            android:id="@+id/input_liquor"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="0ml"/>
</LinearLayout>
    <TextView
        android:id="@+id/edit_message4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_much_weight"/>
    <EditText
        android:id="@+id/weight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:inputType="number"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClick"
        android:text="Send"
        />


</LinearLayout>
